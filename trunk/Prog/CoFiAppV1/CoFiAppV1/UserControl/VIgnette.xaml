<UserControl x:Class="CoFiAppV1.Vignette"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoFiAppV1"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300"
             x:Name="root">

    <Grid Background="{StaticResource defaultColor}">
        <!--Définition de la grid-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--Définition de la grid-->
        
            <!--Début d'une séléction-->
            <TextBlock Grid.Column="0" Text="{Binding PTitre, ElementName=root}" FontWeight="Bold" FontSize="22" VerticalAlignment="Center" TextWrapping="Wrap"/>
            <Viewbox Grid.Column="1" Stretch="Uniform"  >
                <!--Changer l'image-->
                <Image Source="{Binding PImage, ElementName=root}" Height="100" Width="100" HorizontalAlignment="Right"/>
            </Viewbox>
            <!--Fin d'une séléction-->
    </Grid>
</UserControl>
